<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@../resources/bootstrap.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Index">
    <children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Group>
               <children>
                  <VBox prefHeight="0.0" prefWidth="800.0">
                     <children>
                        <AnchorPane>
                           <children>
                                <Label fx:id="LoginLabel" alignment="CENTER" prefHeight="68.0" prefWidth="800.0" text="Scheduler" textAlignment="CENTER" AnchorPane.topAnchor="10.0">
                                    <font>
                                        <Font size="46.0" />
                                    </font>
                                </Label>
                              <Label fx:id="signed_in_as" text="Signed in as: &lt;null&gt;" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0" />
                              <Label fx:id="sign_out" onMouseEntered="#addUnderline" onMouseExited="#removeUnderline" text="Sign Out" textFill="#0066cc" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor></Label>
                           </children>
                        </AnchorPane>
                        <AnchorPane>
                           <children>
                              <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                 <children>
                                    <Label text="Upcoming Appointments">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <TableView fx:id="appointments_table" maxHeight="100.0" minHeight="100.0" styleClass="column-header">
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                    <AnchorPane>
                                       <children>
                                          <ButtonBar buttonMinWidth="50.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
                                            <buttons>
                                              <Button fx:id="appointment_edit_button" disable="true" mnemonicParsing="false" onAction="#editAppointment" styleClass="primary" text="Edit" />
                                                <Button fx:id="appointment_add_button" mnemonicParsing="false" onAction="#addAppointment" stylesheets="@../resources/bootstrap.css" text="Add">
                                                   <styleClass>
                                                      <String fx:value="button" />
                                                      <String fx:value="primary" />
                                                   </styleClass></Button>
                                            </buttons>
                                          </ButtonBar>
                                       </children>
                                    </AnchorPane>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="174.0" prefWidth="800.0">
                           <children>
                              <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                 <children>
                                    <Label text="Customers">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <TableView fx:id="customers_table" maxHeight="100.0" minHeight="100.0">
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                    <AnchorPane>
                                       <children>
                                          <ButtonBar buttonMinWidth="50.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
                                             <buttons>
                                                <Button fx:id="customer_edit_button" disable="true" mnemonicParsing="false" onAction="#editCustomer" styleClass="primary" text="Edit" />
                                                <Button fx:id="customer_add_button" mnemonicParsing="false" onAction="#addCustomer" styleClass="primary" text="Add" />
                                             </buttons>
                                          </ButtonBar>
                                       </children>
                                    </AnchorPane>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="174.0" prefWidth="800.0">
                           <children>
                              <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                 <children>
                                    <Label text="Contacts">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <TableView fx:id="contacts_table" maxHeight="100.0" minHeight="100.0">
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                    <AnchorPane>
                                       <children>
                                          <ButtonBar buttonMinWidth="50.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
                                             <buttons>
                                                <Button fx:id="contact_edit_button" disable="true" mnemonicParsing="false" onAction="#editContact" styleClass="primary" text="Edit" />
                                                <Button fx:id="contact_add_button" mnemonicParsing="false" onAction="#addContact" styleClass="primary" text="Add" />
                                             </buttons>
                                          </ButtonBar>
                                       </children>
                                    </AnchorPane>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
            </Group>
         </children>
      </StackPane>
    </children>
</AnchorPane>
